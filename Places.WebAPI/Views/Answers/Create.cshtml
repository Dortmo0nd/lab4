@model Places.BLL.DTO.AnswerDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Створити відповідь";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Створити нову відповідь</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Content">Зміст</label>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="QuestionId">Питання</label>
        <select id="QuestionId" name="QuestionId" class="form-control">
            @foreach (var question in ViewBag.Questions)
            {
                <option value="@question.Id">@question.Content</option>
            }
        </select>
    </div>
    @Html.AntiForgeryToken()
    <input type="submit" value="Створити" class="btn btn-primary" />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}