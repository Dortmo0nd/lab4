@model Places.BLL.DTO.AnswerDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Видалити відповідь";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Видалити відповідь</h2>

<h3>Ви впевнені, що хочете видалити це?</h3>
<div>
    <h4>Відповідь</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Зміст</dt>
        <dd class="col-sm-10">@Model.Content</dd>
        <dt class="col-sm-2">Питання (Id)</dt>
        <dd class="col-sm-10">@Model.QuestionId</dd>
        <dt class="col-sm-2">Користувач (Id)</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" onclick="return confirm('Ви впевнені?')" />
        <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
    </form>
</div>