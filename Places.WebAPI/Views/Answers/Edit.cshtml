@model Places.BLL.DTO.AnswerDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Редагувати відповідь";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редагувати відповідь</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Content" class="control-label">Зміст</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuestionId" class="control-label">Питання (Id)</label>
        <input asp-for="QuestionId" class="form-control" type="number" />
        <span asp-validation-for="QuestionId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserId" class="control-label">Користувач (Id)</label>
        <input asp-for="UserId" class="form-control" type="number" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Зберегти" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}