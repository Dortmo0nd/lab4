@model Places.BLL.DTO.AnswerDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Редагувати відповідь";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редагувати відповідь</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="Content" class="control-label">Зміст</label>
        <textarea asp-for="Content" class="form-control" required></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuestionId" class="control-label">Питання</label>
        <select asp-for="QuestionId" class="form-control" required>
            @foreach (var question in ViewBag.Questions)
            {
                <option value="@question.Id">@question.Content</option>
            }
        </select>
        <span asp-validation-for="QuestionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Зберегти" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}