@model Places.BLL.DTO.LoginDTO
@{
    ViewData["Title"] = "Аутентифікація";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Places App</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            color: #333;
        }

        .auth-container {
            margin: 20px;
            max-width: 600px;
        }

        h2 {
            color: #333;
            margin-bottom: 15px;
        }

        p {
            margin-bottom: 20px;
            font-size: 16px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn {
            padding: 8px 15px;
            text-decoration: none;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 4px;
            margin-right: 10px;
            display: inline-block;
            font-size: 14px;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        footer {
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid #ddd;
            text-align: center;
            font-size: 14px;
            color: #666;
        }
    </style>
</head>
<body>
<div class="auth-container">
    <h2>Вітаємо!</h2>
    <p>Будь ласка, увійдіть або зареєструйтеся, щоб досліджувати визначні місця.</p>

    <div class="form-group">
        <a asp-controller="Users" asp-action="Login" class="btn btn-primary" href="~/Auth/Login">Логін</a>
        <a asp-controller="Users" asp-action="Register" class="btn btn-primary" href="~/Auth/Register">Реєстрація</a>
    </div>
</div>

<footer>
    <p>© 2025 Places App</p>
</footer>
</body>
</html>