@model Places.BLL.DTO.MediaDTO

@{
    ViewData["Title"] = "Delete Media";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Media</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Media</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">File Path</dt>
        <dd class="col-sm-10">@Model.FilePath</dd>
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>
        <dt class="col-sm-2">Place Id</dt>
        <dd class="col-sm-10">@Model.PlaceId</dd>
        <dt class="col-sm-2">User Id</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>