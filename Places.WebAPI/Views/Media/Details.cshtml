@model Places.BLL.DTO.MediaDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Деталі медіа-файлу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Деталі медіа-файлу</h2>

<div>
    <h4>Медіа</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Шлях до файлу</dt>
        <dd class="col-sm-10">@Model.FilePath</dd>
        <dt class="col-sm-2">Тип</dt>
        <dd class="col-sm-10">@Model.Type</dd>
        <dt class="col-sm-2">Місце</dt>
        <dd class="col-sm-10">@ViewBag.PlaceName</dd>
        <dt class="col-sm-2">Користувач</dt>
        <dd class="col-sm-10">@ViewBag.UserName</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редагувати</a>
    <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
</div>