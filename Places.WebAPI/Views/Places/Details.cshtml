@model Places.BLL.DTO.PlaceDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Place Details</h2>

<div>
    <h4>Place</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Latitude</dt>
        <dd class="col-sm-10">@Model.Latitude</dd>
        <dt class="col-sm-2">Longitude</dt>
        <dd class="col-sm-10">@Model.Longitude</dd>
    </dl>
</div>

<h3>Reviews</h3>
<table class="table">
    <thead>
    <tr>
        <th>Content</th>
        <th>User Id</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var review in Model.Reviews)
    {
        <tr>
            <td>@review.Content</td>
            <td>@review.UserId</td>
            <td>
                <a asp-controller="Reviews" asp-action="Edit" asp-route-id="@review.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="Reviews" asp-action="Delete" asp-route-id="@review.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<p>
    <a asp-controller="Reviews" asp-action="Create" asp-route-placeId="@Model.Id" class="btn btn-primary">Add Review</a>
</p>

<h3>Questions</h3>
<table class="table">
    <thead>
    <tr>
        <th>Content</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var question in Model.Questions)
    {
        <tr>
            <td>@question.Content</td>
            <td>
                <a asp-controller="Questions" asp-action="Edit" asp-route-id="@question.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="Questions" asp-action="Delete" asp-route-id="@question.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Questions" asp-action="Create" asp-route-placeId="@Model.Id" class="btn btn-primary">Add Question</a>
    }
</p>

<h3>Media Files</h3>
<table class="table">
    <thead>
    <tr>
        <th>File Path</th>
        <th>Type</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var media in Model.MediaFiles)
    {
        <tr>
            <td>@media.FilePath</td>
            <td>@media.Type</td>
            <td>
                <a asp-controller="Media" asp-action="Edit" asp-route-id="@media.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="Media" asp-action="Delete" asp-route-id="@media.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<p>
    <a asp-controller="Media" asp-action="Create" asp-route-placeId="@Model.Id" class="btn btn-primary">Add Media</a>
</p>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Place</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete Place</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>