@model Places.BLL.DTO.ReviewDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Деталі відгуку";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Деталі відгуку</h2>

<div>
    <h4>Відгук</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Зміст</dt>
        <dd class="col-sm-10">@Model.Content</dd>
        <dt class="col-sm-2">Місце (Id)</dt>
        <dd class="col-sm-10">@Model.PlaceId</dd>
        <dt class="col-sm-2">Користувач (Id)</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редагувати</a>
    <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
</div>