@model Places.BLL.DTO.ReviewDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Редагувати відгук";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редагувати відгук</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" /> <!-- Приховане поле для UserId -->
    <div class="form-group">
        <label asp-for="Content" class="control-label">Зміст</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="PlaceId" class="control-label">Місце</label>
        <select asp-for="PlaceId" class="form-control">
            @foreach (var place in ViewBag.Places)
            {
                <option value="@place.Id" selected="@(place.Id == Model.PlaceId ? "selected" : "")">@place.Name</option>
            }
        </select>
        <span asp-validation-for="PlaceId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Зберегти" class="btn btn-primary" />
    </div>
</form>