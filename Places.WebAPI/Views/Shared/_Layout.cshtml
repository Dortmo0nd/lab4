<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Places App</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        .navbar { margin-bottom: 20px; }
        .nav-list { list-style-type: none; padding: 0; display: flex; gap: 10px; }
        .nav-list li { display: inline; }
    </style>
</head>
<body>
<header>
    <h1>Welcome to Places App!</h1>
    <p>Explore and manage notable places.</p>
    @if (User.Identity.IsAuthenticated)
    {
        <p>Welcome, @User.Identity.Name!</p>
    }
</header>
<nav class="navbar">
    <ul class="nav-list">
        @if (User.Identity.IsAuthenticated)
        {
            <li><a asp-controller="Home" asp-action="Index" class="btn btn-info">Home</a></li>
            <li><a asp-controller="Places" asp-action="Index" class="btn btn-info">Places</a></li>
            <li><a asp-controller="Reviews" asp-action="Index" class="btn btn-info">Reviews</a></li>
            <li><a asp-controller="Questions" asp-action="Index" class="btn btn-info">Questions</a></li>
            @if (User.IsInRole("Admin"))
            {
                <li><a asp-controller="Questions" asp-action="Create" class="btn btn-info">Add Question</a></li>
                <li><a asp-controller="Users" asp-action="Index" class="btn btn-info">Users</a></li>
            }
            <li><a asp-controller="Media" asp-action="Index" class="btn btn-info">Media</a></li>
            <li><a asp-controller="Answers" asp-action="Index" class="btn btn-info">Answers</a></li>
            <li><a asp-controller="Users" asp-action="Logout" class="btn btn-secondary">Logout</a></li>
        }
        else
        {
            <li><a asp-controller="Users" asp-action="Login" class="btn btn-secondary" href="~/Users/Login">Login</a></li>
            <li><a asp-controller="Users" asp-action="Register" class="btn btn-secondary" href="~/Users/Register">Register</a></li>
        }
    </ul>
</nav>
<main>
    @RenderBody()
</main>
<footer>
    <p>Â© 2025 Places App</p>
</footer>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/dist/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>