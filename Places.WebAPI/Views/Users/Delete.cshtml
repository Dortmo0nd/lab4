@model Places.BLL.DTO.UserDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Delete User</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.Full_name</dd>
        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.Role</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>