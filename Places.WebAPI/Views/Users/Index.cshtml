@model IEnumerable<Places.BLL.DTO.UserDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Користувачі";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Користувачі</h2>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Повне ім'я</th>
        <th>Роль</th>
        <th>Дії</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Full_name</td>
            <td>@user.Role</td>
            <td>
                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Деталі</a>
                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Редагувати</a>
                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Видалити</a>
            </td>
        </tr>
    }
    </tbody>
</table>